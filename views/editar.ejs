    <section id="inscrever">
        <form id="format" method="POST">
       <div>
        <label for="nome">Nome</label>
        <input type="text" name="nome" id="input_nome" class="resetar" placeholder="Digite o Nome do Jogo" required>
    </div>
    <div>
        <label for="nome">Tipo</label>
        <input type="text" name="tipo" id="input_type" placeholder="Digite o Genero do Jogo" required>
    </div>
    <div>
        <label for="nome">Imagem</label>
        <input type="text" name="imagem" id="input_img" placeholder="Cole o Link da imagem do jogo" required>
    </div>
    <div>
        <label for="nome">Descrição</label>
        <input type="text" name="descricao" id="input_descript" placeholder="Digite a Descrição do jogo" required>
    </div>
       <div>
           <button type="submit">
            Atualizar</button>
       </div> 
    </form>
    <a href="/" class="sublin">
        <button>
            Cancelar</button>
        </a>
    </section>
