<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Delete</title>
  </head>
  <body>
    <div id="mySidenav" class="sidenav">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
      <a href="/"><img src="/img/home.png" height="25">Home</a>
      <a href="/md"><img src="/img/megaicon.png" height="25">Megadrive™</a>
      <a href="/snes"><img src="/img/snesicon.png" height="25">Super Nintendo™</a>
    </div>
    <span style="font-size:30px;cursor:pointer;color:white;text-shadow:-1px -1px black" onclick="openNav()">&#9776; Menu</span>
        <div>
            <% lista.forEach((lista, find) => { %>
                <a href="/details/<%= lista.id%>"
                  ><img src="<%=lista.imagem %>" width="380" height="310"
                /></a>
                  <h2 class="button button-pink send-bd"><%= lista.nome%></h2>
                <% }) %>
              </div>
            <form id="format" method="POST">
           <div>
            <button type="submit" class="button button-pink send-bd">Deletar</button>
            </div>
      </div>
    <script src="/script/script.js"></script>
  </body>
</html>
