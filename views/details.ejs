<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/stylemd.css" />
    <title>Details</title>
  </head>
  <body>
<span
      style="
        font-size: 30px;
        cursor: pointer;
        color: white;
        text-shadow: -1px -1px black;
      "
      onclick="openNav()"
      >&#9776; Menu</span
    >
    <div id="myModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <div class="wrapper">
          <div class="title">Editar</div>
          <div class="form">
            <form action="/new" method="POST">
              <div class="input_field" tabindex="1">
                <label for="nome">Nome: </label>
                <input
                  type="text"
                  name="nome"
                  class="input"
                  id="nome"
                  placeholder="Digite o nome"
                  required
                />
              </div>
              <div class="input_field" tabindex="2">
                <label for="tipo">Tipo: </label>
                <input
                  type="text"
                  name="tipo"
                  class="input"
                  id="tipo"
                  placeholder="Digite o tipo"
                  required
                />
              </div>
              <div class="input_field" tabindex="3">
                <label for="imagem">Imagem: </label>
                <input
                  type="text"
                  name="imagem"
                  class="input"
                  id="imagem"
                  placeholder="Digite o link da imagem"
                  required
                />
              </div>
              <div class="input_field" tabindex="4">
                <label for="descricao">Descrição: </label>
                <input
                  type="text"
                  name="descricao"
                  class="input"
                  id="descricao"
                  placeholder="Digite a descrição"
                  required
                />
              </div>
              <div class="input_field" tabindex="5">
                <select name="cons" style="width: 250px">
                  <option value="Snes">Snes</option>
                </select>
              </div>
              <button class="btn" type="submit">Cadastrar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="1">
      <% jogo.forEach((jogo, find) => { %>
      <img src="<%=jogo.imagem %>" width="380" height="310"
      />
        <h2 class="button button-pink send-bd"><%= jogo.nome%></h2>
        <h2 class="button button-pink send-bd"><%= jogo.descricao%></h2>
      </a>
      <% }) %>
    </div>
    <script src="/script/script.js"></script>
  </body>
</html>
